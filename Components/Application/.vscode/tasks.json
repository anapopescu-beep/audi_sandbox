   "version": "2.0.0",
   "tasks": [
         {
            "label": "all-release",
            "type": "shell",
            "command": "${workspaceFolder}\\..\\..\\Tools\\Build_Env\\Workspace\\Build\\VC_Helper\\vc-all.bat",
            "problemMatcher": [],
            "group": {
               "kind": "build",
               "isDefault": true
            },
            "presentation": {
               "echo": false,
               "reveal": "always",
               "focus": false,
               "panel": "shared",
               "showReuseMessage": false,
               "clear": true
            }
         },
         {
         "label": "app",
         "type": "shell",
         "command": "${workspaceFolder}\\..\\..\\Tools\\Build_Env\\Workspace\\Build\\VC_Helper\\vc-app.bat",
         "problemMatcher": [],
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "presentation": {
            "echo": false,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": false,
            "clear": true
         }
      },
      {
         "label": "run_QAC",
         "type": "shell",
         "command": "${workspaceFolder}\\..\\..\\Metrics\\Static_Analysis\\run_QAC_VS_CODE.bat ${file}",
         "problemMatcher": [],
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "presentation": {
            "echo": false,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": false,
            "clear": true
         }
      },
      {
         "label": "vera++",
         "options": {},
         "type": "shell",
         "command": "${workspaceFolder}\\..\\..\\Tools\\vera++\\Installation\\vera++\\bin\\vera++.exe",
         "args": [
            "${file}"
         ],
         "problemMatcher": [
         {
            "fileLocation": "absolute",
            "severity":"warning",
            "owner": "vera++",
            "source": "vera++",
            "pattern": [
            {
               "file": 1,
               "line": 2, 
               "message": 3,
               "regexp": "^(.+):(\\d+):\\s(.+)$"
            }
            ]
         }
         ],
         "group": {
            "kind": "test",
            "isDefault": false
         },
         "presentation": {
            "echo": false,
            "reveal": "always",
            "focus": false,
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": true
         }
      },
      {
         "label": "app-clean",
         "type": "shell",
         "command": "${workspaceFolder}\\..\\..\\Tools\\Build_Env\\Workspace\\Build\\VC_Helper\\vc-app-clean.bat",
         "problemMatcher": [],
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "presentation": {
            "echo": false,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": false,
            "clear": true
         }
      },
      {
         "label": "vera-clean",
         "options": {},
         "type": "shell",
         "command": "ver",
         "problemMatcher": [
         {
            "fileLocation": "absolute",
            "severity":"warning",
            "owner": "vera++",
            "source": "vera++",
            "pattern": [
            {
               "file": 1,
               "line": 2, 
               "message": 3,
               "regexp": "^(.+):(\\d+):\\s(.+)$"
            }
            ]
         }
         ],
         "group": {
            "kind": "test",
            "isDefault": false
         },
         "presentation": {
            "echo": false,
            "reveal": "never",
            "focus": false,
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": false
         }
      },
   ]
}